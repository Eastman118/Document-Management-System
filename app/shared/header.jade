md-toolbar.header-spacing.md-whiteframe-z2(flex layout="row" ng-cloak='' ng-controller="HeadCtrl")
  .md-toolbar-tools
    h2
      a(ui-sref="home" layout-padding) DocKip
    span(flex='')
    |  {{loggedInUser.userName}}
    a(ng-if="loggedIn" ui-sref="dashboard")
      md-button.md-icon-button.icon-button(aria-label="gravatar" layout-wrap)
      img(gravatar-src="{{loggedInUser.email}}" gravatar-size="35" hide-sm)
      md-tooltip {{loggedInUser.userName}}
    a(ng-if="loggedIn")
      md-button.md-icon-button(aria-label='logout' ng-click="logoutUser()" layout-wrap)
        i.md-accent.fa.fa-sign-out
        md-tooltip logout
    a(ng-if="!loggedIn" ui-sref="home")
      md-button.md-icon-button(aria-label='login' ng-click="loginUser()" layout-wrap)
        i.md-accent.fa.fa-sign-in
        md-tooltip login
