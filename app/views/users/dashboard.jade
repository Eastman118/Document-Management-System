.dashboard-wrapper(ng-if="loggedInUser" layout="row" flex)
  md-sidenav(class="md-sidenav-left md-whiteframe-z2" md-component-id="left" layout="column" md-is-locked-open="$mdMedia('gt-md')")
    md-toolbar.md-hue-2.toolbar-header
      span(flex)
      .md-toolbar-tools-bottom.inset(layout="column")
        span
        .text-center {{loggedInUser.userName}}
        .text-center(style="font-size:0.8em") Role: {{loggedInUser.role}}
        .text-center.doc-no No of docs: {{docCount || 0}}
    md-divider
    md-content.fit(layout="column" flex="30")
      md-card.fit-margin.ripple-container(md-ink-ripple layout="column" ui-sref="dashboard({id:loggedInUser._id})" flex layout-align="center center")
        i(class="fa fa-file")
        .insert
        | My Documents
      md-card.fit-margin.ripple-container(md-ink-ripple layout="column" flex layout-align="center center" ui-sref="dashboard.all")
        i(class="fa fa-file")
        .insert
        | View Documents
      md-card.fit-margin.ripple-container(ui-sref="dashboard.editProfile" md-ink-ripple layout="column" flex layout-align="center center")
        i(class="fa fa-pencil-square-o")
        | Edit Profile
      md-divider
      md-card.fit-margin.ripple-container(ng-if="isAdmin()" md-ink-ripple layout="column" flex layout-align="center center")
        | Admin Panel
      md-card.fit-margin.ripple-container(ng-if="isAdmin()" md-ink-ripple layout="column" flex layout-alfign="center center" ui-sref="admin({id:loggedInUser._id, section: 'role'})")
        i(class="fa fa-user")
        | Manage Roles
      md-card.fit-margin.ripple-container(ng-if="isAdmin()" md-ink-ripple layout="column" flex layout-align="center center" ng-click="manangeUsers($event)" ui-sref="admin({id:loggedInUser._id, section: 'user'})")
        i(class="fa fa-user-secret")
        | Manage Users
      md-card.fit-margin.ripple-container(ng-if="isAdmin()" md-ink-ripple layout="column" flex layout-align="center center" ng-click="manangeDoc($event)" ui-sref="admin({id:loggedInUser._id, section: 'documents'})")
        i(class="fa fa-list")
        | Manage Documents
  .md-padding(flex ui-view="inner-view")

