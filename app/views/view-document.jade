.docForm-view.md-padding(layout-align="center center" flex="75")
  md-content(flex="100")
    form(name="view-form" method="post")
      div(flex layout="row" layout-align="end end")
        span.md-margin.success-status {{status}}
        md-button.md-raised.md-warn(ng-click="updateDoc($event)" ng-disabled="view-form.$invalid")
          i.material-icons save
          | Save
        md-button.md-raised.md-primary(ui-sref="dashboard.all")
          i.material-icons cancel
          | Cancel
        md-button.md-raised(ng-click="deleteDoc($event)") Delete
      md-divider(md-inset)
      div.grid-header(layout-align="center center")
        h3 Document update
      div(layout="column")
        div(layout="row" align-wrap flex layout-align="start end")
          md-input-container.md-block(md-no-float flex)
            label
            input(ng-model="docDetail.title" ng-required placeholder="Your title goes here" aria-label="docDetail.title")
          md-input-container(flex)
            md-select.md-padding.md-margin(placeholder='role' ng-model='loggedInUser.role' aria-label='role')
              md-option(ng-repeat='role in roles' ng-value='role.title' ng-required) {{role.title}}
        md-input-container.md-block(md-no-float)
          label
          textarea(ng-model="docDetail.content" ng-required placeholder="Your document content goes here" ng-maxlength="500" rows="17" aria-label="docDetail.content")
        div
